@model SiteManagementUi.Models.MessageModels.AddMessageModel

@{
    ViewData["Title"] = "AddMessage";
}

<h1>AddMessage</h1>

<h4>AddMessageModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMessage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
